<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mechfinder">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MechFinder">
        <activity
            android:name=".CompanyProfile"
            android:label="@string/title_activity_company_profile"
            android:theme="@style/Theme.MechFinder.NoActionBar"></activity>
        <activity
            android:name=".CompanyReg"
            android:label="@string/title_activity_company_reg"
            android:theme="@style/Theme.MechFinder.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".SeviceLogin"
            android:label="@string/title_activity_sevice_login"
            android:theme="@style/Theme.MechFinder.NoActionBar" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".ServiceProviderReg"
            android:label="@string/title_activity_service_provider_reg"
            android:theme="@style/Theme.MechFinder.NoActionBar" />
        <activity
            android:name=".ServiceProviders"
            android:label="@string/title_activity_service_providers"
            android:theme="@style/Theme.MechFinder.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".GetService"
            android:label="@string/title_activity_get_service"
            android:theme="@style/Theme.MechFinder.NoActionBar" />
        <activity
            android:name=".NewUser"
            android:label="@string/title_activity_new_user"
            android:theme="@style/Theme.MechFinder.NoActionBar" />
        <activity
            android:name=".UserLogin"
            android:label="@string/title_activity_user_login"
            android:theme="@style/Theme.MechFinder.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MechFinder.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>